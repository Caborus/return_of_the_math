{
  "manifest_version": 3,
  "name": "Return of the Math",
  "version": "1.0",
  "description": "Challenge users with a math problem before redirecting to Cool Math Games",
  "permissions": ["activeTab", "webNavigation", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    //Commented out because I don't have icons yet
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
        "matches": ["https://www.coolmathgames.com/*"],
        "js": ["content.js"],
        "css": ["content.css"]
    }
    ]
}
